<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.kiprotich.japheth.image.ProfileImage
        android:layout_centerHorizontal="true"
        android:id="@+id/profileImageRegistro"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_color="#CACACA"
        android:src="@drawable/profile_picture_blank"
        android:layout_marginBottom="12dp"
        />

    <Button
        android:id="@+id/btnAgregarImagenRegistro"
        android:layout_width="35dp"
        android:layout_height="35dp"
        style="@style/FindMaterial.Buttons.Icon.Light"
        app:icon="@drawable/ic_edit"
        app:iconSize="21dp"
        app:iconGravity="textStart"
        android:padding="0dp"
        app:iconPadding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:layout_alignBottom="@id/profileImageRegistro"
        android:layout_alignRight="@id/profileImageRegistro"
        android:layout_marginRight="-4dp"
        android:layout_marginBottom="-8dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        />

</RelativeLayout>